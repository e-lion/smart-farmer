rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Records (Income/Expenses)
    match /records/{recordId} {
      // Allow reading and deleting if the existing document belongs to the user
      allow read, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow creating if the new document claims to belong to the user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow updating if both existing and new (immutable ownership) belong to user
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
    }

    // Educational Modules
    match /modules/{moduleId} {
      allow read: if isAuthenticated();
      // Allow write for authenticated users to enable seeding
      allow write: if isAuthenticated();
    }
  }
}
